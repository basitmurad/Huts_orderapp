<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Huts"
        tools:targetApi="31">
        <activity
            android:name=".ui.HutsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.CartsActivity"
            android:exported="false"
            android:theme="@style/Custom.Theme.Huts" />
        <activity
            android:name=".ui.SpeciaLOfferActivity"
            android:exported="false"
            android:theme="@style/Custom.Theme.Huts" />
        <activity
            android:name=".ui.FastFoodAndOtherActivity"
            android:exported="false"
            android:theme="@style/Custom.Theme.Huts" />
        <activity
            android:name=".ui.LunchAndDinnerActivity"
            android:exported="false"
            android:theme="@style/Custom.Theme.Huts" />
        <activity
            android:name=".ui.BreakFastActivity"
            android:exported="false"
            android:theme="@style/Custom.Theme.Huts" />
        <activity
            android:name=".ui.SettingActivity"
            android:exported="false"
            android:theme="@style/Custom.Theme.Huts" />
        <activity
            android:name=".ui.ProfileActivity"
            android:exported="false"
            android:theme="@style/Custom.Theme.Huts" />
        <activity
            android:name=".ui.DashboardActivity"
            android:exported="true"
            android:theme="@style/Custom.Theme.Huts">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RegistrationActivity"
            android:exported="false"
            android:theme="@style/Custom.Theme.Huts" />
        <activity
            android:name=".ui.SignUpActivity"
            android:exported="false"
            android:theme="@style/Custom.Theme.Huts" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Custom.Theme.Huts" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>